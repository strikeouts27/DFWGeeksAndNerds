@model ContactManager.Models.Contact

@{
    ViewData["Title"] = "Delete Contact";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h2>Delete Contact</h2>
        
        <div class="alert alert-warning">
            <h4>Are you sure you want to delete this contact?</h4>
        </div>
        
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h4>@Model.FullName</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">First Name:</dt>
                    <dd class="col-sm-9">@Model.FirstName</dd>

                    <dt class="col-sm-3">Last Name:</dt>
                    <dd class="col-sm-9">@Model.LastName</dd>

                    <dt class="col-sm-3">Email:</dt>
                    <dd class="col-sm-9">@Model.Email</dd>

                    <dt class="col-sm-3">Phone:</dt>
                    <dd class="col-sm-9">@Model.Phone</dd>

                    <dt class="col-sm-3">Organization:</dt>
                    <dd class="col-sm-9">@(Model.Organization ?? "N/A")</dd>
                </dl>
            </div>
        </div>
        
        <form asp-action="Delete" method="post" class="mt-3">
            <input type="hidden" asp-for="ContactId" />
            <button type="submit" class="btn btn-danger">Confirm Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
